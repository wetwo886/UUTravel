<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="top"
        android:background="#ef5050"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imgBack"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@drawable/menu_btn_bg"
            android:contentDescription="@string/back_text"
            android:src="@drawable/back_btn_64" />

        <Button
            android:id="@+id/button1"
            android:layout_width="1dp"
            android:layout_height="38dp"
            android:layout_gravity="right|center_vertical"
            android:background="#fff1e6"
            android:text="" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/button11"
            android:layout_width="1dp"
            android:layout_height="38dp"
            android:layout_gravity="right|center_vertical"
            android:background="#fff1e6"
            android:text="" />


         
        <ImageButton
            android:id="@+id/imgBtnMore"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@drawable/menu_btn_bg"
            android:contentDescription="@string/back_text"
            android:src="@drawable/more_64" />
        
    </LinearLayout>

    <ProgressBar
        android:id="@+id/webBroswerPB"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:progressDrawable="@drawable/progress_style" />

    <WebView
        android:id="@+id/webBrowser"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    </LinearLayout>